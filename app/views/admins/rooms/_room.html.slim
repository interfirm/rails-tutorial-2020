- last_message = room.messages.last

= link_to admins_room_path(room), class: 'room', id: "room_id_#{room.id}", remote: true do
  .header
    .title
      = room.id
    .timestamp class=('unread' if room.has_unread_message?(@current_admin))
      - if last_message
        = message_datetime(datetime: last_message.created_at)
  .content
    - if last_message
      = "#{last_message.messageable.sender_name}ï¼š#{last_message.content}"